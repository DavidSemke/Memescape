{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "off"
  },
  "overrides": [
    {
      "files": ["**/components/**/?(*.)+(spec|test).[jt]s?(x)"],
			"extends": [
        "plugin:testing-library/react",
        "plugin:jest-dom/recommended"
      ],
      "rules": {
        "jest-dom/prefer-in-document": "off"
      }
    }
  ]
}
